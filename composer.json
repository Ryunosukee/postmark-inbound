{
    "name": "mvdnbrk/postmark-inbound",
    "type": "library",
    "description": "API to process Postmark Inbound Webhooks.",
    "keywords": [
        "postmark",
        "e-mail",
        "inbound",
        "webhook"
    ],
    "homepage": "https://github.com/mvdnbrk/postmark-inbound",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark van den Broek",
            "email": "mvdnbrk@gmail.com",
            "homepage": "https://github.com/mvdnbrk",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=6.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Mvdnbrk\\Postmark\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mvdnbrk\\Postmark\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.2-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
