{
    "name": "heyhoo/postmark-inbound",
    "type": "library",
    "description": "API to process Postmark Inbound Webhooks.",
    "keywords": [
        "heyhoo",
        "postmark",
        "inbound",
        "webhook"
    ],
    "homepage": "https://github.com/heyhoo/postmark-inbound",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark van den Broek",
            "email": "mark@heyhoo.nl",
            "homepage": "https://github.com/heyhoo",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.4.3",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Heyhoo\\Postmark\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heyhoo\\Postmark\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
